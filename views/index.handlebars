


<div class="wrapper">
<h2>Eat Da Burger!</h2>
<div class="container" >
<h2>Burgers to Eat</h2>
<ol>
  {{#each burgers}}
    {{#unless this.devoured}}
    
      <li class="burger-item">
        <form action="/{{this.id}}?_method=PUT" method="POST">
          {{this.burger_name}}
          <input type="hidden" name="devoured" value="true">
          <button  class="devour-btn" type="submit">Devour It!</button>
        </form>

        </li>

    {{/unless}}
  {{/each}}
</ol>
</div>


<div class="container1">
<h2>burger that are devoured!</h2>

<ol>
  {{#each burgers}}
    {{#if this.devoured}}
      <li class="burger-item">
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">          
        </form>

      </li>
    {{/if}}
  {{/each}}
</ol>
</div>
<div class="container2" >
<h2>Add a burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
   <input type="text" id="ca" name="burgerName">
  <input type="hidden" name="devoured" value="false">
 </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>